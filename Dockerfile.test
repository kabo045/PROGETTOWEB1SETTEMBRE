FROM node:20-alpine
WORKDIR /app

# dipendenze prima (cache)
COPY package.json package-lock.json* ./

# Se lockfile Ã¨ coerente usa ci, altrimenti fallback ad install
RUN if [ -f package-lock.json ]; then \
      npm ci --omit=dev=false --no-audit --no-fund || \
      (echo "Lockfile mismatch, uso npm install" && npm install --no-audit --no-fund); \
    else \
      npm install --no-audit --no-fund; \
    fi

# codice
COPY . .

ENV NODE_ENV=test
CMD ["npm", "run", "test:all"]
